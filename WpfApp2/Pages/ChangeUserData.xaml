<Window x:Class="WpfApp2.Pages.ChangeUserData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Pages"
        mc:Ignorable="d"
        Title="ChangeUserData" Height="450" Width="350" FontSize="24">
    <Grid>
        <StackPanel>
            <GroupBox Header="Введите новое имя">
                <TextBox Name="tbName"/>
            </GroupBox>
            <GroupBox Header="Введите новую фамилию">
                <TextBox Name="tbsurname"/>
            </GroupBox>
            <Button Click="Button_Click">Изменить данные</Button>
        </StackPanel>
    </Grid>
</Window>
